{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 1
    },
    "icon": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "style": {
      "type": "enumeration",
      "enum": [
        "PRIMARY",
        "SECONDARY"
      ],
      "default": "PRIMARY",
      "required": true
    },
    "href": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "isExternal": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
